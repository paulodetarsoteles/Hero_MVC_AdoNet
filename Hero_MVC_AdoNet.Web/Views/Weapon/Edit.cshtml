@model WeaponViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Dados da Arma/Poder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WeaponId" class="control-label" hidden></label>
                <input asp-for="WeaponId" class="form-control" hidden />
                <span asp-validation-for="WeaponId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                @Html.DropDownList("Type", Html.GetEnumSelectList<Hero_MVC_AdoNet.Domain.Enum.WeaponEnum>(),new { @class = "form-control" })
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeroId" class="control-label"></label>
                @Html.DropDownList("HeroId", ViewBag.GetAllHeroes, "Selecione...", new { @class = "form-control" })
                <span asp-validation-for="HeroId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
