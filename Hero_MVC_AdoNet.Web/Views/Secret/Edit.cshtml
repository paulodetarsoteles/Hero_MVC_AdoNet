@model HeroViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Dados do Herói</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HeroId" class="control-label" hidden></label>
                <input asp-for="HeroId" class="form-control" hidden />
                <span asp-validation-for="HeroId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label asp-for="Active" class="form-check-label"></label>
                <input asp-for="Active" class="form-check-input" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/Hero/Edit.js" asp-append-version="true"></script>
}
