@model SecretViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir</h1>

<h3>Deseja realmente excluir este registro?</h3>
<div>
    <h4>Dados da Identidade</h4>
    <hr />
    <dl class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SecretId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SecretId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        @if (Model.HeroId != 0 && Model.Hero is not null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.HeroId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.HeroId)
            </dd>
        }
        else
        {
            <dt class="col-sm-2">
                <span>Nenhum herói vinculado</span>
            </dt>
        }
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
